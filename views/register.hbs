{{#extend "css"}}
<link rel="stylesheet" href="/css/external.css"/>
{{/extend}}

<form id="registrationForm" class="form-account" action="/register" method="POST" novalidate>
    <div>
        <h3 class="text-white">Registration</h1>
    </div>
    {{#if serverMessage}}
        <div class="alert alert-danger">{{serverMessage}}</div>
    {{/if}}
    <div class="form-group">
        <input type="text" class="form-control" name="pin_code" placeholder="Pin Code" value="{{formData.pin_code}}" required>
        <div class="invalid-feedback">
            Registration requires a pin.
        </div>
        <small class="form-text text-white">Ask your administrator for this value.</small>
    </div>
    <div class="form-group">
        <input type="text" id="username" class="form-control" name="username" placeholder="Username" value="{{formData.username}}" required>
        <div class="invalid-feedback">
            Please choose a username.
        </div>
    </div>
    <div class="form-group">
        <input type="email" id="email" class="form-control" name="email" placeholder="Email" value="{{formData.email}}" required>
        <div class="invalid-feedback">
            Please provide an email.
        </div>
    </div>
    <div class="form-group">
        <input type="password" id="password" class="form-control" name="password" placeholder="Password" minlength="8" maxlength="50" value="{{formData.password}}" required>
        <div class="invalid-feedback">
            Please provide a password (8-50 characters).
        </div>
    </div>
    <div class="form-group">
        <input type="password" id="passwordRepeat" class="form-control" placeholder="Repeat Password" value="{{formData.password}}" required>
        <div class="invalid-feedback">
            Passwords must match.
        </div>
    </div>
    <button class="btn btn-primary btn-block">Register</button>
    <small class="form-text text-white mt-2">Already have an account? <a href="/login">Login</a></small>
</form>
<script>
window.addEventListener('load', function() {
    let form = document.getElementById('registrationForm');
    form.addEventListener('submit', (event) => {
        let form_valid = form.checkValidity();
        let passwords_valid = passwordsMatch();
        if (!form_valid || !passwords_valid) {
            event.preventDefault();
            event.stopPropagation();
        }
        form.classList.add('was-validated');
    });
});

function passwordsMatch() {
    let initial = document.getElementById('password');
    let repeat = document.getElementById('passwordRepeat');
    if (initial.value != repeat.value) {
        repeat.setCustomValidity(false);
        return false;
    }
    repeat.setCustomValidity('');
    return true;
}
</script>